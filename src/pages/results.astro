---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import {CandidatesList} from "../components/AngListCandidates/CandidatesList";
const filter = Astro.url.searchParams.get('filter') || -1;
---

<DefaultLayout title="Results">
  <section>
    <h1>Our results 🧑‍🚀</h1>
    <p class="size-20">These are results</p>
  </section>
  <h2>Results</h2>
  <section class="margin-32">
    <CandidatesList client:visible client:only filterIndex={filter} />
  </section>
  <section>
    </section>
</DefaultLayout>

<style>
  .space-content{
    display: flex;
    flex-wrap: wrap;
    row-gap: 2rem;
  }
</style>